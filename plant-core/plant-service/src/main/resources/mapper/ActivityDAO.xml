<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moguying.plant.core.dao.content.ActivityDAO">
    <resultMap id="BaseResultMap" type="com.moguying.plant.core.entity.content.Activity">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="sub_title" jdbcType="VARCHAR" property="subTitle"/>
        <result column="open_time" jdbcType="TIMESTAMP" property="openTime"/>
        <result column="close_time" jdbcType="TIMESTAMP" property="closeTime"/>
        <result column="pic_url" jdbcType="VARCHAR" property="picUrl"/>
        <result column="link_url" jdbcType="VARCHAR" property="linkUrl"/>
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.moguying.plant.core.entity.content.Activity">
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, title, sub_title, open_time, close_time, pic_url,link_url
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>


    <select id="activityListForHome" resultMap="BaseResultMap">
        select id,title,sub_title,open_time,close_time,pic_url,link_url from plant_activity
        <where>
            <if test="startTime != null">
                <![CDATA[
            unix_timestamp(#{startTime}) >= unix_timestamp(open_time)
          ]]>
            </if>
            <if test="endTime != null">
                <![CDATA[
            AND unix_timestamp(#{endTime}) <= unix_timestamp(close_time)
          ]]>
            </if>

        </where>
        order by open_time desc
    </select>

    <select id="newestActivity" resultMap="BaseResultMap">
        select id,title,sub_title,open_time,close_time,pic_url,link_url from plant_activity
        where
        <![CDATA[
            unix_timestamp(NOW()) >= unix_timestamp(open_time) AND unix_timestamp(NOW()) <= unix_timestamp(close_time)
          ]]>
        order by open_time
    </select>

    <select id="selectSelective" parameterType="com.moguying.plant.core.entity.content.Activity"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from plant_activity
        <where>
            <if test="title != null">
                <bind value="'%'+title+'%'" name="titleLike"/>
                title like #{titleLike}
            </if>
        </where>
        order by id desc
    </select>

    <select id="activityList" resultMap="BaseResultMap">
        select id,title,sub_title,open_time,close_time,pic_url,link_url
        from plant_activity
        order by id desc
    </select>


</mapper>