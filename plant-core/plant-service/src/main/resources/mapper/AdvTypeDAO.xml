    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="position_flag" jdbcType="VARCHAR" property="positionFlag" />
  </resultMap>
  <sql id="Base_Column_List">
    id, type_name, description, position_flag
  </sql>

  <insert id="insert" parameterType="com.moguying.plant.core.entity.dto.AdvType" keyProperty="id" useGeneratedKeys="true">
    insert into plant_adv_type
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="typeName != null">
        type_name,
      </if>
      <if test="description != null">
        description,
      </if>
      <if test="positionFlag != null">
        position_flag,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="typeName != null">
        #{typeName,jdbcType=VARCHAR},
      </if>
      <if test="description != null">
        #{description,jdbcType=VARCHAR},
      </if>
      <if test="positionFlag != null">
        #{positionFlag,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="updateById" parameterType="com.moguying.plant.core.entity.dto.AdvType">
    update plant_adv_type
    <set>
      <if test="typeName != null">
        type_name = #{typeName,jdbcType=VARCHAR},
      </if>
      <if test="description != null">
        description = #{description,jdbcType=VARCHAR},
      </if>
      <if test="positionFlag != null">
        position_flag = #{positionFlag,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

  <select id="selectSelective" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/> from plant_adv_type
    <where>

      <if test="typeName != null">
        <bind name="typeNameLike" value="'%' + typeName + '%'"/>
        type_name like #{typeNameLike}
      </if>
      <if test="positionFlag != null">
        AND position_flag = #{positionFlag}
      </if>
    </where>
    order by id desc
  </select>


