<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moguying.plant.core.dao.admin.AdminLogDAO">

    <select id="adminLogs" resultType="com.moguying.plant.core.entity.admin.AdminLog">
        select * from plant_admin_log
        <where>
            <if test="where != null">
                <if test="where.userId != null">
                    and user_id = #{where.userId}
                </if>
                <if test="where.actionMethod != null and where.actionMethod != ''">
                    and instr(action_method, #{where.actionMethod})
                </if>
                <if test="where.actionDesc != null and where.actionDesc != ''">
                    and instr(action_desc, #{where.actionDesc})
                </if>
                <if test="where.start != null">
                    and unix_timestamp(add_time) &gt;= unix_timestamp(#{where.start})
                </if>
                <if test="where.end != null">
                    and unix_timestamp(add_time) &lt;= unix_timestamp(#{where.end})
                </if>
            </if>
        </where>
        order by add_time desc
    </select>
</mapper>