        <result column="add_time" jdbcType="TIMESTAMP" property="addTime"/>
        <result column="version_name" jdbcType="VARCHAR" property="versionName"/>
        <result column="update_desc" jdbcType="VARCHAR" property="updateDesc"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, version, download_url, is_show, add_time,version_name,update_desc
    </sql>

    <insert id="insert" parameterType="com.moguying.plant.core.entity.dto.Apk">
        insert into plant_apk
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="version != null">
                version,
            </if>
            <if test="downloadUrl != null">
                download_url,
            </if>
            <if test="isShow != null">
                is_show,
            </if>
            <if test="addTime != null">
                add_time,
            </if>
            <if test="versionName != null">
                version_name,
            </if>
            <if test="updateDesc != null">
                update_desc,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="version != null">
                #{version,jdbcType=VARCHAR},
            </if>
            <if test="downloadUrl != null">
                #{downloadUrl,jdbcType=VARCHAR},
            </if>
            <if test="isShow != null">
                #{isShow,jdbcType=BIT},
