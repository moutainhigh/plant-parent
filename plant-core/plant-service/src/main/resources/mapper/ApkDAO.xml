                #{addTime,jdbcType=TIMESTAMP},
            </if>
            <if test="versionName != null">
                #{versionName,jdbcType=VARCHAR},
            </if>
            <if test="updateDesc != null">
                #{updateDesc,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateById" parameterType="com.moguying.plant.core.entity.dto.Apk">
        update plant_apk
        <set>
            <if test="version != null">
                version = #{version,jdbcType=VARCHAR},
            </if>
            <if test="downloadUrl != null">
                download_url = #{downloadUrl,jdbcType=VARCHAR},
            </if>
            <if test="isShow != null">
                is_show = #{isShow,jdbcType=BIT},
            </if>
            <if test="addTime != null">
                add_time = #{addTime,jdbcType=TIMESTAMP},
            </if>
            <if test="versionName != null">
                version_name = #{versionName,jdbcType=VARCHAR},
            </if>
            <if test="updateDesc != null">
                update_desc = #{updateDesc,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="selectSelective" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from plant_apk
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="version != null">
                AND version = #{version}
            </if>
        </where>
        order by add_time desc
    </select>

    <select id="newestApkInfo" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from plant_apk
        where is_show = 1
        order by add_time desc limit 1
    </select>
