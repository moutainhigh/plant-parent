<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moguying.plant.core.dao.farmer.FarmerLevelDAO">
  <resultMap id="BaseResultMap" type="com.moguying.plant.core.entity.vo.FarmerLevel">
    <id column="level" jdbcType="INTEGER" property="level" />
    <result column="grow_up_count_min" jdbcType="INTEGER" property="growUpCountMin" />
    <result column="grow_up_count_max" jdbcType="INTEGER" property="growUpCountMax" />
  </resultMap>
  <sql id="Base_Column_List">
    `level`, grow_up_count_min, grow_up_count_max
  </sql>

  <insert id="insert" parameterType="com.moguying.plant.core.entity.vo.FarmerLevel">
    insert into plant_farmer_level
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="level != null">
        `level`,
      </if>
      <if test="growUpCountMin != null">
        grow_up_count_min,
      </if>
      <if test="growUpCountMax != null">
        grow_up_count_max,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="level != null">
        #{level,jdbcType=INTEGER},
      </if>
      <if test="growUpCountMin != null">
        #{growUpCountMin,jdbcType=INTEGER},
      </if>
      <if test="growUpCountMax != null">
        #{growUpCountMax,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <update id="updateById" parameterType="com.moguying.plant.core.entity.vo.FarmerLevel">
    update plant_farmer_level
    <set>
      <if test="growUpCountMin != null">
        grow_up_count_min = #{growUpCountMin,jdbcType=INTEGER},
      </if>
      <if test="growUpCountMax != null">
        grow_up_count_max = #{growUpCountMax,jdbcType=INTEGER},
      </if>
    </set>
    where `level` = #{level,jdbcType=INTEGER}
  </update>

  <select id="selectLevelByGrowUpCount" resultType="int">
    select level from plant_farmer_level where
    <![CDATA[
        grow_up_count_min <= #{growUpCount} and grow_up_count_max >= #{growUpCount}
    ]]>
  </select>
</mapper>